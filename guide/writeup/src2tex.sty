\@tempswafalse \def\par{\if@tempswa\hbox{}\@@par\else\@tempswatrue\fi}
\obeylines %\small
\progfont %
\makebox[0cm][r]{\progegmarker\ }%
\catcode``=13 \@noligs \let\do\@makeother \docspecials
 \frenchspacing\@vobeyspaces \catcode``=12}

